{
  "manifest_version": 3,
  "name": "Lumo-Edge",
  "version": "0.1.0",
  "description": "Agent local opt-in pour Proton Pass — analyse DOM et hints chiffrés (.lumo).",
  "permissions": ["activeTab","scripting","storage"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "bg.js" },
  "action": { "default_title": "Lumo-Edge", "default_popup": "popup.html" },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
